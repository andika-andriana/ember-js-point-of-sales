<div class="row mt-3">
  <div class="col-lg-6">
    <h3 class="text-info">Detail: Point Of Sales</h3>
  </div>
</div>

<hr class="bg-info">

<div class="row">
  <div class="col-lg-12">

    <div class="form-group-row">
      <label class="label-input">Tanggal Transaksi</label>
      <div class="col-sm-10">
        {{moment-format model.transactionDate "DD-MMM-YYYY"}}
      </div>
    </div>

    <div class="form-group-row">
      <label class="label-input">Supplier</label>
      <div class="col-sm-10">
        {{model.supplier.name}}
      </div>
    </div>

    <div class="form-group-row">
      <label class="label-input">Remarks</label>
      <div class="col-sm-10">
        {{model.remarks}}
      </div>
    </div>

    <div class="form-group-row">
      <label class="label-input">Total Price</label>
      <div class="col-sm-10">
        {{model.totalPrice}}
      </div>
    </div>

    <hr class="bg-info">

    <div class="form-group-row">
      <strong>Detail Transaksi</strong>
      <table class="table table-bordered table-striped">
        <thead>
          <tr class="text-center bg-info text-light">
            <th>Nama Produk</th>
            <th>Jumlah</th>
            <th>Harga</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.pointOfSalesDetail as |item|}}
            <tr>
              <td>{{item.product}}</td>
              <td>{{item.qty}}</td>
              <td>{{item.price}}</td>
              <td>{{item.subtotal}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{#link-to "point-of-sale" class="btn btn-success"}}
      Kembali ke list
    {{/link-to}}
  </div>
</div>